{
    "terminal.integrated.rendererType": "dom",
    "workbench.editor.showTabs": true,
    "workbench.editor.enablePreview": false,
    "window.zoomLevel": -1,
    "workbench.colorTheme": "Night Owl",
    "sync.gist": "718d218d2e876fa63124426ca65112e4",
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
    "[php]": {
        "editor.formatOnSave": false
    },
    "[python]": {
        "editor.formatOnSave": false
    },
    "auto-close-tag.enableAutoCloseTag": false,
    "emmet.excludeLanguages": ["typescript", "markdown"],
    "editor.fontSize": 14,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "editor.tabSize": 4,
    "editor.renderWhitespace": "boundary",
    "editor.fontFamily": "JetBrains Mono, Menlo, Monaco, 'Courier New', monospace",
    "editor.detectIndentation": false,
    "editor.wordWrap": "on",

    // eslint
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "editor.formatOnSave": false,
    "eslint.nodePath": "./node_modules/eslint",
    "eslint.packageManager": "npm",
    "eslint.alwaysShowStatus": true,
    "typescript.tsdk": "node_modules/typescript/lib", // VScode組み込みのtsを使わない

    // prettier
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[graphql]": {
        "editor.formatOnSave": true
    },
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "[javascriptreact]": {
        "editor.formatOnSave": true
    },
    "[json]": {
        "editor.formatOnSave": true
    },
    "[typescript]": {
        "editor.formatOnSave": true
    },
    "[typescriptreact]": {
        "editor.formatOnSave": true
    },
    "prettier.disableLanguages": ["markdown"],
    "prettier.printWidth": 120,
    "prettier.tabWidth": 4
}
